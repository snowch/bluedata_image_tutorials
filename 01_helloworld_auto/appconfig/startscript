#!/bin/bash
#
# Copyright 2016 (c) BlueData Software, Inc.
#
#

set -o pipefail
SELF=$(readlink -nf $0)
export CONFIG_BASE_DIR=$(dirname ${SELF})

source ${CONFIG_BASE_DIR}/logging.sh
source ${CONFIG_BASE_DIR}/utils.sh

if [[ "$1" == "--addnodes" ]]; then
    ## Nothing to do on the existing nodes when we receive this notification.
    exit 0
elif [[ "$1" == "--delnodes" ]]; then
    ## Nothing to do on the existing nodes when we receive this notification.
    exit 0
elif [[ "$1" == "--configure" ]]; then
    log "Starting configuration ... "

    ## Fall through to start the configuration.
else
    echo "ERROR: Unknown command line option(s): '$@'"
    exit 10
fi

source ${CONFIG_BASE_DIR}/macros.sh

####################### AUTOGENERATED CODE STARTS BELOW #######################
#
if  [[ "${ROLE}" == 'webserver' ]] ||\
  [[ "${ROLE}" == 'controller' ]] ||\
  [[ "${ROLE}" == 'worker' ]]; then
    [ ! -d '/var/www/html' ] && mkdir -vp /var/www/html
    cp -rvf ${CONFIG_BASE_DIR}/index.html /var/www/html/index.html
fi

if  [[ "${ROLE}" == 'webserver' ]] ||\
  [[ "${ROLE}" == 'controller' ]] ||\
  [[ "${ROLE}" == 'worker' ]]; then
    REPLACE_PATTERN @@@@FQDN@@@@ /var/www/html/index.html GET_NODE_FQDN
fi

if  [[ "${ROLE}" == 'webserver' ]] ||\
  [[ "${ROLE}" == 'controller' ]] ||\
  [[ "${ROLE}" == 'worker' ]]; then
    REPLACE_PATTERN @@@@CORES@@@@ /var/www/html/index.html GET_TOTAL_VCORES
fi

if  [[ "${ROLE}" == 'webserver' ]] ||\
  [[ "${ROLE}" == 'controller' ]] ||\
  [[ "${ROLE}" == 'worker' ]]; then
    REPLACE_PATTERN @@@@MEMORY@@@@ /var/www/html/index.html GET_TOTAL_VMEMORY_MB
fi


REGISTER_START_SERVICE_SYSCTL httpd httpd
